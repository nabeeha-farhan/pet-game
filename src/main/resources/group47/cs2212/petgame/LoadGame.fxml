<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group47.cs2212.petgame.LoadGameController" prefHeight="600.0" prefWidth="800.0">
   <children>
      <!-- Background Image -->
      <ImageView fx:id="backgroundImageView" layoutX="0.0" layoutY="0.0" fitHeight="600.0" fitWidth="800.0" />

      <!-- Title -->
      <Label text="Load Game" layoutX="300.0" layoutY="50.0"
             style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />

      <!-- Saved Games List -->
      <ListView fx:id="savedGamesList" layoutX="100.0" layoutY="120.0" prefHeight="300.0" prefWidth="600.0"
                style="-fx-border-color: white;" />

      <!-- Load Button -->
      <Button text="Load Selected Game" fx:id="loadButton" layoutX="100.0" layoutY="450.0" prefWidth="200.0"
              onAction="#handleLoadGame" style="-fx-font-size: 14px;" />

      <!-- Delete Button -->
      <Button text="Delete Selected Game" fx:id="deleteButton" layoutX="320.0" layoutY="450.0" prefWidth="200.0"
              onAction="#handleDeleteGame" style="-fx-font-size: 14px;" />

      <!-- Back Button -->
      <Button text="Back to Main Menu" fx:id="backButton" layoutX="540.0" layoutY="450.0" prefWidth="200.0"
              onAction="#handleBackToMenu" style="-fx-font-size: 14px;" />
   </children>
</AnchorPane>
